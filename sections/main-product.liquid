{{ 'main-product.css' | asset_url | stylesheet_tag }}
{{ 'main-product-info.css' | asset_url | stylesheet_tag }}

{% assign nivel_resistencia = product.metafields.custom.nivel_de_resistencia %}
{% assign cupons = product.metafields.custom.cupons_de_desconto.value %}
{% assign modelo = product.metafields.custom.modelo %}
{% assign marca = product.metafields.custom.marca %}


{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .triangle {
    left: calc((20.16px* {{nivel_resistencia | minus: 1 }}) + 2.76px);
  }
{%- endstyle -%}


<div class="page-width section-{{ section.id }}-padding">
  <div id="product">
    <div class="wrapper-product">
      <div class="left-side-product">
        <div class="product-media">
          <div class="wishlist">
            <wishlist-btn data-product-handle="{{ product.handle }}">
              <span class="svg-wrapper">
                {{- 'wishlist-icon.svg' | inline_asset_content -}}
              </span>
            </wishlist-btn>
          </div>
          {% render 'product-main-media'
            , product: product %}


          {% if nivel_resistencia != blank %}
            <div class="nivel-resistencia">
              <p>Nível de resistência</p>
              <div class="wrapper">
                <div class="wrapper-svg">
                  {{- 'nivel-resistencia.svg' | inline_asset_content -}}
                </div>

                <div class="triangle">
                  <div class="svg-wrapper small">
                    {{- 'triangle.svg' | inline_asset_content -}}
                  </div>
                </div>
              </div>
            </div>
          {% endif %}
        </div>
      </div>
      <div class="right-side-product">
        {% render 'cupons-area' cupons: cupons %}

        <div class="title-product">
          <h1>{{ product.title }}</h1>
        </div>
        <div class="brand-code-model-product">
          <div class="code">
            <p>Código:
              <span>{{ product.first_available_variant.id }}</span>
            </p>
          </div>
          {% if modelo != blank %}
            <div class="model">
              <p>Módelo:
                <span>
                  {{ modelo }}
                </span>
              </p>
            </div>
          {% endif %}
          {% if marca != blank %}
            <div class="brand">
              <p>Marca:
                <span>
                  {{ marca }}
                </span>
              </p>
            </div>

          {% endif %}
        </div>
        <div class="app-full-desk">
          {% for block in section.blocks %}
              {% if block.type =="@app" %}
                {% render block %}
              {% endif %}
          {% endfor %}
          <a href="#">Ver descrição completa</a>
        </div>

        <div class="price-area">
          {% render 'price-product' product:product %}
        </div>
      </div>
    </div>
  </div>
</div>

<script src="{{ 'zoom-main-image.js' | asset_url }}" defer></script>
<script src="{{ 'wishlist.js' | asset_url }}" defer></script>


{% schema %}
  {
    "name": "t:sections.main-page.name",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "blocks": [
      {
        "type": "@app"
      }
    ]
  }
{% endschema %}